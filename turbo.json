{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "STRAPI_URL",
    "STRAPI_PUBLIC_TOKEN",
    "AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist", ".strapi"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "coverage": {
      "dependsOn": ["^build"]
    },
    "seed:dev": {
      "cache": false
    },
    "generate:types": {
      "cache": false
    },
    "e2e": {
      "cache": false,
      "persistent": true
    }
  }
}
